{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "Erlang.d.ts",
    "async.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
